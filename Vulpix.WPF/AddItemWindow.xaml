<Window x:Class="Vulpix.WPF.AddItemWindow"
        Name="AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vulpix.WPF"
        mc:Ignorable="d"
        Title="Add Item" SizeToContent="WidthAndHeight" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="ItemNameTextBox" HorizontalAlignment="Left" Margin="205,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" Height="27"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="190"/>
        <Button x:Name="AddItemButton" Content="Add Item" HorizontalAlignment="Left" Margin="205,42,0,0" VerticalAlignment="Top" Width="190" Height="23" IsDefault="True" Click="AddItemButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="190" Height="23" IsCancel="True"/>

    </Grid>
</Window>
